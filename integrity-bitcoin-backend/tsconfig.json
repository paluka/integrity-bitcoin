{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "allowJs": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "pretty": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "lib": ["es2015", "es2016", "es2017", "es2018", "es2019"]
  },
  "include": ["./src/**/*.*"],
  "exclude": ["**/*.test.*", "integration-tests"]
}
